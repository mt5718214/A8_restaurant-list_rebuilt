<form class="pt-4 restaurant-editArea" action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">
  <div class="form-group">
    <label for="name">Restaurant Name:</label>
    <input type="text" class="form-control" placeholder="name" name="name" value="{{restaurant.name}}">
  </div>

  <div class="form-group">
    <label for="category">Restaurant category:</label>
    <input type="text" class="form-control" placeholder="category" name="category" value="{{restaurant.category}}">
  </div>

  <div class="form-group">
    <label for="image">Restaurant image:</label>
    <input type="text" class="form-control" placeholder="image" name="image" value="{{restaurant.image}}">
  </div>

  <div class="form-group">
    <label for="location">Restaurant location:</label>
    <input type="text" class="form-control" placeholder="location" name="location" value="{{restaurant.location}}">
  </div>

  <div class="form-group">
    <label for="phone">Restaurant phone:</label>
    <input type="text" class="form-control" placeholder="phone" name="phone" value="{{restaurant.phone}}">
  </div>

  <div class="form-group">
    <label for="rating">Restaurant rating:</label>
    <input type="number" class="form-control" placeholder="rating" name="rating" value="{{restaurant.rating}}"
      step="0.1" min="0" max="5">
  </div>

  <div class="form-group">
    <label for="description">Restaurant description:</label>
    <input type="text" class="form-control" placeholder="description" name="description"
      value="{{restaurant.description}}">
  </div>

  <button class="btn btn-primary btn-sm" type="submit">Save</button>
  <a href="/" class="btn btn-secondary btn-sm">back</a>
</form>