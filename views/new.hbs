<form class="pt-4 restaurant-createArea" action="/restaurants/new" method="POST">
  <div class="form-group">
    <label for="">Restaurant Name:</label>
    <input type="text" class="form-control" placeholder="name" name="name">
  </div>

  <div class="form-group">
    <label for="">Restaurant Category:</label>
    <input type="text" class="form-control" placeholder="category" name="category">
  </div>

  <div class="form-group">
    <label for="">Restaurant Image:</label>
    <input type="url" class="form-control" placeholder="image" name="image">
  </div>

  <div class="form-group">
    <label for="">Restaurant Location:</label>
    <input type="text" class="form-control" placeholder="location" name="location">
  </div>

  <div class="form-group">
    <label for="">Restaurant Phone:</label>
    <input type="text" class="form-control" placeholder="phone" name="phone">
  </div>

  <div class="form-group">
    <label for="">Restaurant Rating:</label>
    <input type="number" class="form-control" placeholder="rating" name="rating" step="0.1" min="0" max="5">
  </div>

  <div class="form-group">
    <label for="">Restaurant Description:</label>
    <input type="text" class="form-control" placeholder="description" name="description">
  </div>

  <button class="btn btn-primary btn-sm" type="submit">Create!</button>
  <a href="/" class="btn btn-secondary btn-sm">back</a>
</form>